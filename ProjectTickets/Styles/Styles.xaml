<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <Style x:Key="bt_enter" TargetType="Button">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Margin" Value="0 20 0 0" />
        <Setter Property="Width" Value="350" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Background" Value="#14213d"/>
        <Setter Property="Foreground" Value="#e5e5e5"/>
        <Setter Property="FontFamily" Value="Verdana"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True" >
                <Setter Property="Background"  Value="#e5e5e5"/>
                <Setter Property="Foreground"  Value="#14213d"/>
            </Trigger>
        </Style.Triggers>
        <Style.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="CornerRadius" Value="10"/>
                
            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="txtbox_enter" TargetType="TextBox">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Margin" Value="10 5" />
        <Setter Property="Width" Value="450" />
        <Setter Property="Height" Value="40" />
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="Padding" Value="3" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="#14213d"/>
        <Setter Property="BorderThickness" Value="2"/>
        
    </Style>
    <Style x:Key="passwordboxtest" TargetType="PasswordBox">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Margin" Value="10 5" />
        <Setter Property="Width" Value="450" />
        <Setter Property="Height" Value="40" />
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="Padding" Value="3" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="#14213d"/>
        <Setter Property="BorderThickness" Value="2"/>

        <Style.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Style.Resources>
    </Style>


    <Style x:Key="bt_search" TargetType="Button">
        <Setter Property="FontSize" Value="17" />
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Background" Value="#ffb703"/>
        <Setter Property="Foreground" Value="#e5e5e5"/>
        <Setter Property="FontFamily" Value="Verdana"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True" >
                <Setter Property="Background"  Value="#e5e5e5"/>
                <Setter Property="Foreground"  Value="#14213d"/>
            </Trigger>
        </Style.Triggers>
        <Style.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="CornerRadius" Value="3"/>

            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="txtbox_search" TargetType="TextBox">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Margin" Value="10 5" />
        <Setter Property="Width" Value="230" />
        <Setter Property="Height" Value="40" />
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="Padding" Value="3" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="#ffb703"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Style.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="CornerRadius" Value="5"/>

            </Style>
        </Style.Resources>
    </Style>



    <Style x:Key="txtbox_price" TargetType="TextBox">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="10 5" />
        <Setter Property="Width" Value="65" />
        <Setter Property="Height" Value="35" />
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="Padding" Value="3" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="#ffb703"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Style.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="CornerRadius" Value="5"/>

            </Style>
        </Style.Resources>
    </Style>


    <Style x:Key="datepicker_style" TargetType="DatePicker">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Height" Value="30" />
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderThickness" Value="3"/>
        
    </Style>
    
    
    
    <!-- Стиль для DataGrid -->
    <Style TargetType="DataGrid" x:Key="StyledDataGrid">
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="BorderBrush" Value="#B0B0B0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="RowBackground" Value="White"/>
        <Setter Property="AlternatingRowBackground" Value="#F0F0F0"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="SelectionUnit" Value="FullRow"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="RowHeight" Value="70"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <!-- Стиль для заголовков столбцов -->
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="Background" Value="#a4c3b2"/>
        <Setter Property="Foreground" Value="#403d39"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderBrush" Value="#a4c3b2"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    <!-- Стиль для строк -->
    <Style TargetType="DataGridRow">
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="Background" Value="#a4c3b2"/>
        <Setter Property="Foreground" Value="#403d39"/>
        <Setter Property="Height" Value="30"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#a4c3b2"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#C0C0C0"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>